extends base.jade
block title
	title= post.title
block content
	.primary
		.post
			.header
				h2
					a(href=post.url)= post.title
				.post_metas
					span
						i.fa.fa-calendar &nbsp;
						| {{ post.date.format('%Y-%m-%d') }}
					if post.tags: span
						i.fa.fa-tags
						for tag in post.tags
							a.tag(href="/tag/{{tag}}") &nbsp;{{tag}}
					span.count
						i.fa.fa-book
						span= post.visits or 0
			.entry.markdown= post.content

		+post.comments_as_html()